@model Product

@{
    Layout = "_Layout";
    ViewBag.Title = ViewBag.Title ?? "Watersports";
}

@section Header {
 Product Information -  Watersports
}
    <tr>
        <th>Name</th>
        <td>@Model?.Name</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model?.Price.ToString("c")</td>
    </tr>
    <tr>
        <th>Category ID</th>
        <td>@Model?.CategoryId</td>
    </tr>

    @section Footer {
    @(((Model?.Price / ViewBag.AveragePrice)* 100).ToString("F2"))% of average price
}